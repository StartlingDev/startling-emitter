{
  "name": "startling-emitter",
  "version": "0.1.0",
  "description": "A tiny TypeScript event emitter library (work in progress).",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/startling-emitter.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && vite build && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "typescript": "^5.9.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.0"
  }
}
